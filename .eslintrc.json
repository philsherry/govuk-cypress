{
  "env": {
    "browser": true,
    "cypress/globals": true,
    "es6": true,
    "jest": true,
    "jest/globals": true,
    "jquery": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:chai-friendly/recommended",
    "plugin:cypress/recommended",
    "plugin:jest-formatting/recommended",
    "plugin:sonarjs/recommended",
    "prettier"
  ],
  "globals": {
    "cy": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "chai-friendly",
    "cypress",
    "ie11",
    "import",
    "jest",
    "jsx-a11y",
    "node",
    "promise",
    "sonarjs"
  ],
  "root": true,
  "rules": {
    "sonarjs/no-duplicate-string": "off",
    "sonarjs/no-identical-functions": "off"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
